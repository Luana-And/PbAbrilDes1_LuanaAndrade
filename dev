import java.util.ArrayList;
import java.util.List;

public class Pessoa {
    private String nome;
    private Pessoa conjuge;
    private List<Pessoa> filhos;

    public Pessoa(String nome) {
        this.nome = nome;
        this.filhos = new ArrayList<>();
    }

    public void adicionarFilho(Pessoa filho) {
        this.filhos.add(filho);
    }

    public void adicionarConjuge(Pessoa conjuge) {
        this.conjuge = conjuge;
    }

    public void imprimirArvoreGenealogica() {
        imprimirArvoreGenealogicaRecursiva(this, 0);
    }

    private void imprimirArvoreGenealogicaRecursiva(Pessoa pessoa, int nivel) {
        StringBuilder sb = new StringBuilder();
        for (int i = 0; i < nivel; i++) {
            sb.append("  "); // Indentação para melhor visualização
        }
        sb.append(pessoa.nome);
        System.out.println(sb.toString());

        if (pessoa.conjuge != null) {
            imprimirArvoreGenealogicaRecursiva(pessoa.conjuge, nivel);
        }

        for (Pessoa filho : pessoa.filhos) {
            imprimirArvoreGenealogicaRecursiva(filho, nivel + 1);
        }
    }
}
public class Main {
    public static void main(String[] args) {
        Pessoa pessoa1 = new Pessoa("João");
        Pessoa pessoa2 = new Pessoa("Maria");
        Pessoa pessoa3 = new Pessoa("Pedro");
        Pessoa pessoa4 = new Pessoa("Ana");

        pessoa1.adicionarConjuge(pessoa2);
        pessoa1.adicionarFilho(pessoa3);
        pessoa1.adicionarFilho(pessoa4);

        pessoa3.adicionarConjuge(pessoa4);

        pessoa1.imprimirArvoreGenealogica();
    }
}
